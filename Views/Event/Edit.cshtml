@model Event_Management_System_CRUD_Application.Models.Event

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <h2>Edit Event</h2>

    @using (Html.BeginForm("Edit", "Event", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" name="EventID" value="@Model.EventID" />

        <div>
            <label for="EventName">Event Name:</label>
            <input type="text" id="EventName" name="EventName" value="@Model.EventName" />
        </div>

        <div>
            <label for="EventDate">Event Date:</label>
            <input type="date" id="EventDate" name="EventDate" value="@Model.EventDate.ToString("yyyy-MM-dd")" />
        </div>

        <div>
            <label for="Location">Location:</label>
            <input type="text" id="Location" name="Location" value="@Model.Location" />
        </div>

        <div>
            <label for="Description">Description:</label>
            <textarea id="Description" name="Description">@Model.Description</textarea>
        </div>

        <div>
            <input type="submit" value="Save Changes" />
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</body>
</html>
